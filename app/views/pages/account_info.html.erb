<div class="account_info">
  <div class="row border p-4">
    <div class="col-6 d-flex justify-content-center align-items-center">
      <% if @user.photo.attached? %>
        <%= cl_image_tag @user.photo.key, height: 40, width: 40, crop: :fill, class:"avatar-large" %>
      <% else %>
        <%= image_tag "poster boy.jpg", alt: "user", width: 150, class:"avatar-large" %>
      <% end %>
    </div>

    <div class="col-6 d-flex flex-column justify-content-center">
      <p>Email: <%= @user.email %></p>
      <p>Username: <%= @user.username %></p>
      <p>Bio: <%= @user.bio %></p>
      <p>Airbnb Points: <%= @user.points %></p>
      <p>Total Accumulated Points since member registration: <%= @user.accumulated_points %></p>
      <p>Tier Status: 
        <% if @user.points > 100000 %>
          <span>Gold member</span>
        <% elsif @user.points > 70000 %>
          <span>Silver member</span>
        <% elsif @user.points > 40000 %>
          <span>Bronze member</span>
        <% else %>
          <span>Normal</span>
        <% end %>
      </p>
    </div>
  </div>

  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex flex-column">
    <%= link_to "Edit Account Info", edit_user_registration_path, class:"btn btn-primary mt-3 editbutton" %>
      <div>
        <%= link_to "Cancel my account", user_registration_path, class:"btn btn-primary mt-3 editbutton", data: { confirm: "Are you sure?", turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
    </div>
    <%= link_to "Back", :back %>
  </div>
</div>